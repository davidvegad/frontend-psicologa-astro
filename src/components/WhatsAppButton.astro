---
// No es necesario importar React ni useContext aquí, ya que la lógica de fetch se moverá a las páginas o a un archivo de datos.
// La URL de la API se obtendrá del entorno de Astro.

const defaultWhatsappNumber = import.meta.env.PUBLIC_DEFAULT_WHATSAPP_NUMBER || '51947208124';
const defaultWhatsappMessage = import.meta.env.PUBLIC_DEFAULT_WHATSAPP_MESSAGE || 'Hola, quisiera más información.';

// Estas variables se pueden sobrescribir si se pasan como props a este componente
interface Props {
  phoneNumber?: string;
  message?: string;
}

const { phoneNumber = defaultWhatsappNumber, message = defaultWhatsappMessage } = Astro.props;

const whatsappUrl = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(message)}`;
---

<a
  href={whatsappUrl}
  class="fixed bottom-6 right-6 z-50 p-4 bg-green-500 rounded-full text-white shadow-lg hover:bg-green-600 transition-all duration-300 ease-in-out transform hover:scale-110"
  target="_blank"
  rel="noopener noreferrer"
  aria-label="Contactar por WhatsApp"
>
  <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
